@model InventoryManagementAPI.Models.Purchase

<div class="container mt-4">
	<div class="card shadow-lg border-danger">
		<div class="card-header bg-danger text-white">
			<h3 class="mb-0">Delete Purchase</h3>
		</div>
		<div class="card-body">
			<h5>Are you sure you want to delete this purchase?</h5>
			<hr />
			<dl class="row">
				<dt class="col-sm-3 fw-bold">
					Product Name
				</dt>
				<dd class="col-sm-9">
					@Model.ProductName
				</dd>
				<dt class="col-sm-3 fw-bold">
					Purchase Price
				</dt>
				<dd class="col-sm-9">
					@Model.PurchasePrice
				</dd>
				<dt class="col-sm-3 fw-bold">
					Quantity
				</dt>
				<dd class="col-sm-9">
					@Model.Quantity
				</dd>
				<dt class="col-sm-3 fw-bold">
					Total Price
				</dt>
				<dd class="col-sm-9">
					@Model.TotalPrice
				</dd>
				<dt class="col-sm-3 fw-bold">
					Purchase Date
				</dt>
				<dd class="col-sm-9">
					@Model.PurchaseDate
				</dd>
			</dl>
			<form asp-action="Delete" method="post">
				<input type="hidden" asp-for="PurchaseID" />
				<div class="d-flex justify-content-end mt-3">
					<button type="submit" class="btn btn-danger px-4 me-3">Delete</button>
					<a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
				</div>
			</form>
		</div>
	</div>
</div>