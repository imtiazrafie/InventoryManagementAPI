@model InventoryManagementAPI.Models.Product

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-dark text-white">
			<h3 class="mb-0">Edit Product</h3>
        </div>
        <div class="card-body">
			<form asp-action="Edit" method="post">
				<input type="hidden" asp-for="ProductID" /> <!-- Hidden field to store ProductID -->

				<div class="mb-3">
					<label asp-for="ProductName" class="form-label">Product Name</label>
					<input asp-for="ProductName" class="form-control" placeholder="Enter Product Name" />
					<span asp-validation-for="ProductName" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="Price" class="form-label">Price</label>
					<input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="Enter Price" />
					<span asp-validation-for="Price" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="ProductQuantity" class="form-label">Product Quantity</label>
					<input asp-for="ProductQuantity" class="form-control" type="number" />
					<span asp-validation-for="ProductQuantity" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="SupplierName" class="form-label">Supplier Name</label>
					<input asp-for="SupplierName" class="form-control" placeholder="Enter Supplier Name"/>
					<span asp-validation-for="SupplierName" class="text-danger"></span>
				</div>
				<div class="d-flex justify-content-end mt-4">
					<button type="submit" class="btn btn-primary px-4 me-3">Save Changes</button>
					<a asp-action="Index" class="btn btn-secondary me-2">Cancel</a>
				</div>
			</form>
        </div>
    </div>
</div>



