@model IEnumerable<InventoryManagementAPI.Models.Supplier>

<div class="container">
	<br />
	<div class="text-center">
		<h3>Supplier List</h3>
	</div>
	<table class="table table-striped table-hover">
		<thead class="table-dark">
			<tr>
				<th>Supplier Name</th>
				<th>Phone</th>
				<th>Email</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var supplier in Model)
			{
				<tr>
					<td>@supplier.SupplierName</td>
					<td>@supplier.Phone</td>
					<td>@supplier.Email</td>
					<td>
						<a asp-action="Edit" asp-route-id="@supplier.SupplierID" class="btn btn-warning btn-sm">Edit</a>
						<a asp-action="Delete" asp-route-id="@supplier.SupplierID" class="btn btn-danger btn-sm">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
	<div class="d-flex justify-content-end mt-4">
		<a asp-action="Create" class="btn btn-success">
			<i class="bi bi-plus-circle"></i> Add New Supplier
		</a>
	</div>
</div>