@model InventoryManagementAPI.Models.Supplier

<div class="container mt-4">
	<div class="card shadow-lg border-danger">
		<div class="card-header bg-danger text-white">
			<h3 class="mb-0">Delete Supplier</h3>
		</div>
		<div class="card-body">
			<h5 class="text-danger">Are you sure you want to delete this supplier?</h5>
			<hr />
			<dl class="row">
				<dt class="col-sm-3 fw-bold">Supplier Name</dt>
				<dd class="col-sm-9">@Model.SupplierName</dd>

				<dt class="col-sm-3 fw-bold">Phone</dt>
				<dd class="col-sm-9">@Model.Phone</dd>

				<dt class="col-sm-3 fw-bold">Email</dt>
				<dd class="col-sm-9">@Model.Email</dd>
			</dl>

			<form asp-action="Delete" method="post">
				<input type="hidden" asp-for="SupplierID" />

				<div class="d-flex justify-content-end mt-3">
					<button type="submit" class="btn btn-danger me-3 px-4">Delete</button>
					<a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
				</div>
			</form>
		</div>
	</div>
</div>